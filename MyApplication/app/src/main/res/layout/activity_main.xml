<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:gravity="top"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/background_black"
        android:gravity="start"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <ImageView
            android:id="@+id/playlistImage"
            android:layout_width="138dp"
            android:layout_height="167dp"
            android:layout_gravity="center"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="4dp"
            app:srcCompat="@drawable/album_cover" />

        <TextView
            android:id="@+id/playlistTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Playlist"
            android:textColor="@color/yellow"
            android:textSize="24sp" />

        <LinearLayout
            android:id="@+id/playlistActions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/button_dots_playlist"
                style="@style/button_secondary"
                android:layout_width="50dp"
                android:layout_height="51dp"
                android:layout_weight="0"
                app:srcCompat="@drawable/dots_icon" />

            <ImageButton
                android:id="@+id/button_random"
                style="@style/button_secondary"
                android:layout_width="50dp"
                android:layout_height="51dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1"
                app:srcCompat="@drawable/random_icon" />

            <ImageButton
                android:id="@+id/button_play_playlist"
                style="@style/button_play"
                android:layout_width="70dp"
                android:layout_height="71dp"
                android:layout_weight="0"
                app:srcCompat="@drawable/pause_button" />

            <ImageButton
                android:id="@+id/button_download"
                style="@style/button_secondary"
                android:layout_width="50dp"
                android:layout_height="51dp"
                android:layout_weight="0"
                app:srcCompat="@drawable/download_icon" />

            <ImageButton
                android:id="@+id/imageButton2"
                style="@style/button_secondary"
                android:layout_width="50dp"
                android:layout_height="51dp"
                android:layout_weight="0"
                app:srcCompat="@drawable/like_icon" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
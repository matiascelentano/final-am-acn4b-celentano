<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="button_play">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">71dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_weight">0</item>
        <item name="android:background">@drawable/circle_purple</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="button_secondary">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">51dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_weight">0</item>
        <item name="android:adjustViewBounds">false</item>
        <item name="android:background">@drawable/circle_black</item>
        <item name="android:cropToPadding">false</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="roundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15dp</item>
    </style>

    <style name="roundedImageMain">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">1dp</item>
    </style>

    <style name="sectionsTitle">
        <item name="android:textColor">@color/yellow</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>